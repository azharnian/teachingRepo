#:import from_hex kivy.utils.get_color_from_hex 

#:set d 30

<TipButton@Button>
	background_color: from_hex("#00800FFF")
	canvas:
		Color:
			rgba: from_hex("#0000FFFF")


<ColorButton@Button>
	on_release: app.paint_canvas.set_line_color(self.background_color)

	
<Painter>:
	Button:
		text: 'DEL'
		right: root.right-10
		top: root.top-10
		width: 90
		height: 90
		size_hint: (None, None)
		on_release: app.paint_canvas.clear_canvas()


	BoxLayout:
		orientation: 'horizontal'
		x : root.x + 20
		top : root.top - 20
		width: 270
		height: 90
		size_hint: (None, None)
		padding: 3
		spacing: 10

		TipButton:
			on_release: app.paint_canvas.set_line_width(d/2)
			canvas:
				Ellipse:
					pos: (self.center_x-30/2, self.center_y-30/2)
					size: d, d

		TipButton:
			on_release: app.paint_canvas.set_line_width(d)
			canvas:
				Ellipse:
					pos: (self.center_x-45/2, self.center_y-45/2)
					size: d*3/2, d*3/2

		TipButton:
			on_release: app.paint_canvas.set_line_width(3*d/2)
			canvas:
				Ellipse:
					pos: (self.center_x-60/2, self.center_y-60/2)
					size: 2*d, 2*d

	BoxLayout:
		#6 Button menyimbolkan warna
		orientation: 'horizontal'
		x: 0
		y: 0
		width: root.width
		height: 90
		size_hint: (None, None)

		ColorButton:
			background_color: from_hex("#FF0000FF")
			canvas:
				Color:
					rgba: from_hex("#FF0000FF")
				Rectangle:
					pos: (self.center_x-50/2, self.center_y-50/2)
					size: (50, 50)
		ColorButton:
			background_color: from_hex("#00FF00FF")
			canvas:
				Color:
					rgba: from_hex("#00FF00FF")
				Rectangle:
					pos: (self.center_x-50/2, self.center_y-50/2)
					size: (50, 50)
		ColorButton:
			background_color: from_hex("#0000FFFF")
			canvas:
				Color:
					rgba: from_hex("#0000FFFF")
				Rectangle:
					pos: (self.center_x-50/2, self.center_y-50/2)
					size: (50, 50)
		ColorButton:
			background_color: from_hex("#0F00F0FF")
			canvas:
				Color:
					rgba: from_hex("#0F00F0FF")
