#:import from_hex kivy.utils.get_color_from_hex 

<MyLabel@Label>:
	markup: True
	font_name: 'Roboto'
	font_size: 30
	bold: True

<MyButton@Button>:
	font_name: 'Roboto'
	font_size: 25
	bold: True

<MyCanvas@Widget>:


<LoginScreen@Screen>:
	name: "LoginScreen"
	FloatLayout:
		Image:
			source: "igs.png"
			size_hint: .3, .3
			pos_hint: {"center_x": 0.5, "center_y":0.85}

		MyLabel:
			text: "Ignatius Global School"
			font_size: 28
			font_name: "Roboto"
			pos_hint: {"center_x": 0.5, "center_y":0.75}

		BoxLayout:
			orientation: "vertical"
			size_hint: 1, None
			height: 300
			padding: [30, 0, 30, 0]
			pos_hint: {"center_x": 0.5, "center_y":0.6}
			MyLabel:
				id: err_msg
				color: from_hex("#ff0000")
				text: ""
				font_size: 20
			TextInput:
				id: username_entry
				hint_text: "Nama Pengguna"
				size_hint_y: .75
				write_tab: False
				multiline: False
			TextInput:
				id: password_entry
				hint_text: "Kata Sandi"
				size_hint_y: .75
				password: True
				write_tab: False
				multiline: False
			MyButton:
				text: "Masuk"
				font_size: 30
				background_color: 0,0,0,0
				on_press: app.logger()
			MyButton:
				text: "Belum terdaftar? daftar di sini."
				font_size: 20
				bold: False
				background_color: 0, 0, 0, 0


<HomeScreen@Screen>:
	name: "HomeScreen"
	BoxLayout:
		orientation: "vertical"

		MyLabel:
			text: "Home Screen"

		MyButton:
			text: "Back"
			on_press: root.manager.current = 'LoginScreen'


ScreenManager:
	current: "LoginScreen"
	LoginScreen: 
	HomeScreen: