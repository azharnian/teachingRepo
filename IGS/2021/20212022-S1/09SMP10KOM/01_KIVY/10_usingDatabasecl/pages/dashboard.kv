Screen:
	name: "dashboard"
	MDFloatLayout:
		id: layout0
		md_bg_color: rgba(246, 250, 255, 255)
		MDToolbar:
			title: ""
			md_bg_color: rgba(202, 0, 13, 255)
			left_action_items: [["menu", lambda x : nav_drawer.set_state('toggle')]]
			top: root.top

		MDFloatLayout:
			size_hint: 1, .33
			pos_hint: {"center_y": .75}
			md_bg_color: 1,1,1,1

			MDLabel:
				id: label_username
				text: ""
				font_name: "Roboto"
				font_size: "16sp"
				halign: "left"
				pos_hint: {"center_x": .58,"center_y": .9}
				#x: root.ids.layout0.x + 35
				color: rgba(202, 0, 13, 255)
				bold: True

			Image:
				id: profile_pic
				source: ""
				size_hint_y: .2
				pos_hint: {"center_x":.5, "center_y": .6}
				canvas.before:
					Color: 
						rgba: rgba(202, 0, 13, 255)
					Ellipse:
						size: 150, 150 #sendiri ?? wkwk
						pos: self.center_x - 75, self.center_y - 75

			MDLabel:
				id: label_fullname
				text: ""
				font_name: "Roboto"
				font_size: "12sp"
				halign: "center"
				pos_hint: {"center_x": .5, "center_y":.35}
				bold: True

			MDLabel:
				id: label_bio
				text: ""
				font_name: "Roboto"
				font_size: "12sp"
				halign: "center"
				pos_hint: {"center_x": .5, "center_y":.25}


	MDNavigationDrawer:
		id: nav_drawer

		MDFloatLayout:
			Image:
				source: "assets/img/igs.png"
				size_hint: .2, .2
				pos_hint: {"center_x":.2, "center_y":.9}

			MDRectangleFlatIconButton:
				icon: "logout-variant"
				text: "Keluar"
				theme_text_color: "Custom"
				line_color: 1,1,1,1
				icon_color: rgba(202, 0, 13, 255)
				text_color: rgba(202, 0, 13, 255)
				pos_hint: {"center_x":.25, "center_y": .8}
				on_press: app.sign_out()

			MDRectangleFlatIconButton:
				icon: "badge-account-horizontal-outline"
				text: "Pengaturan"
				theme_text_color: "Custom"
				line_color: 1,1,1,1
				icon_color: rgba(202, 0, 13, 255)
				text_color: rgba(202, 0, 13, 255)
				pos_hint: {"center_x":.3, "center_y": .75}














